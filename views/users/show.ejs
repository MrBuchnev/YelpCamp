<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <h1><%= user.username %></h1>
        <div class="thumbnail">
            <img src="<%= user.avatar %>" alt="<%= user.username %>'s profile image">
            <div class="caption">
                <a href="mailto:<%= user.email %>">
                    <%= user.email %>
                </a>
            </div>
        </div>
        <h4><%= user.username %>'s bio:</h3>
        <p><%= user.bio %></p>
        <a class="btn btn-info btn-sm" href="/users/<%= user.id %>/edit">Edit Profile</a> <!-- FIGURE OUT HOW TO HIDE THE BUTTON IF THE PAGE ISN'T ABOUT THE CURRENT USER -->
    </div>
    <div class="col-md-8">
        <h2>Campgrounds submitted by <%= user.username %></h2> 
        <% if(campgrounds.length < 1) { %> 
            <h6 class="mt-4 ml-2"><em>No campgrounds submitted yet...</em></h6> 
        <% } else { %> 
            <% campgrounds.forEach(campground => { %> 
                <p class="user-campground-list"><a href="../campgrounds/<%= campground.id %>"><%= campground.name %></a></p> 
            <% }); %> 
        <% } %>
    </div>
</div>

<% include ../partials/footer %>