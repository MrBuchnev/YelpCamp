<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>E-mail address:</label>
                <input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
            </div>
             <div class="form-group">
                <label>Profile picture:</label>
                <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
            </div>
            <div class="form-group">
                <label for="bio">Bio</label> 
                <textarea class="form-control" type="bio" name="user[bio]" rows="5" value="<%= user.bio %>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update info!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>